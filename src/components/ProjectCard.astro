---
const { project } = Astro.props;
import { Image } from 'astro:assets';
---

<div class="flex flex-col sm:flex-row bg-zinc-900 rounded-xl shadow-lg overflow-hidden">
  <!-- Left: Image -->
  {project.data.image && (
    <div class="sm:w-1/3">
      <img src={project.data.image} alt={project.data.title} class="w-full h-full object-cover" />
    </div>
  )}

  <!-- Right: Info -->
  <div class="p-6 sm:w-2/3 flex flex-col">
    <h2 class="text-xl font-semibold text-white">{project.data.title}</h2>
    <p class="mt-2 text-sm text-zinc-300">{project.data.description}</p>

    {project.data.skills && (
      <div class="mt-3 flex flex-wrap gap-2">
        {project.data.skills.map(skill => (
          <span class="px-2 py-1 bg-zinc-800 text-xs rounded-md">{skill}</span>
        ))}
      </div>
    )}

    <a href={project.data.link} target="_blank" class="mt-auto text-blue-400 hover:underline text-sm">
      View Project â†’
    </a>
  </div>
</div>