---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
import LogoWall from "../components/logoWall.astro";
import SkillsList from "../React/SkillsList.tsx";

---
<RootLayout>
	<main>
		<div class="relative w-full min-h-screen flex items-center justify-center overflow-hidden">
			<!-- Full page background -->
			<div class="fixed top-0 left-0 w-full h-full -z-10">
				<WarpBackground
					color1="#09090b"
					color2="#27272a"
					color3="#52525b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>


			<!-- Navigation at top right -->
			<nav class="absolute top-6 right-8 flex space-x-4 z-20">
				<Link href="/blog" variant="secondary">Blog</Link>
				<Link href="/project" variant="secondary">Projects</Link>
				<Link href="/contact" variant="secondary">Contact</Link>
			</nav>

			<!-- Main hero section -->
			<section class="text-[var(--white)] mt-12 md:mt-0 z-10 w-full">
				<div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14 p-4 sm:p-8">
					
					<!-- Intro text -->
					<div class="text-left space-y-4">
						<p class="text-md md:text-lg text-[var(--white-icon)] shiny-white">
							Hi, I'm Rohit Ranjan Kumar
						</p>
						<div class="flex flex-col lg:flex-row lg:items-center space-y-4 lg:space-y-0 lg:space-x-8 md:gap-4">
							<h1 class="text-[var(--white)] text-5xl md:text-6xl font-medium text-pretty leading-none">
								Data Engineer <br /> & Software Developer
							</h1>
							<p class="text-md md:text-2xl text-[var(--white-icon)]">
								Building scalable data pipelines and transforming ideas into seamless, 
								interactive digital experiences with <span class="text-[var(--sec)] shiny-sec">modern technologies</span>.
							</p>
						</div>

						<!-- Social Links -->
<div class="flex justify-start gap-2 pt-3 md:pt-6">
    
    <!-- GitHub -->
    <a target="_blank" href="https://github.com/RRK-CODER" aria-label="GitHub"
       class="transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
        <img src="/svg/github2.svg" alt="GitHub" class="w-8 h-8" />
    </a>

    <!-- LinkedIn -->
    <a target="_blank" href="https://linkedin.com/in/rrk-coder/" aria-label="LinkedIn"
       class="transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
        <img src="/svg/linkedin.svg" alt="LinkedIn" class="w-8 h-8" />
    </a>

    <!-- Kaggle -->
    <a target="_blank" href="https://www.kaggle.com/rrkcoder" aria-label="Kaggle"
       class="transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
        <img src="/svg/kaggle.svg" alt="Kaggle" class="w-8 h-8" />
    </a>

    <!-- LeetCode -->
    <a target="_blank" href="https://leetcode.com/RRK-CODER/" aria-label="LeetCode"
       class="transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
        <img src="/svg/leetcode.svg" alt="LeetCode" class="w-8 h-8" />
    </a>

    <!-- Email -->
    <a target="_blank" href="mailto:rrkcoder@gmail.com" aria-label="Email"
       class="transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
        <img src="/svg/gmail.svg" alt="Email" class="w-8 h-8" />
    </a>
</div>

					</div>

					<!-- Logos -->
					<LogoWall />

					<!-- Skills & Glitch Effect -->
					<div class="flex flex-col lg:flex-row items-center gap-8">
						<SkillsList client:load />
						<div class="flex justify-center md:w-full md:h-[292px] size-[290px] pt-3 md:pt-9 md:ml-16">

						</div>
					</div>
				</div>
			</section>
		</div>

	</main>
</RootLayout>
