---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
import LogoWall from "../components/logoWall.astro";
import SkillsList from "../React/SkillsList.tsx";

---
<RootLayout>
	<main>
		<div class="relative w-full min-h-screen flex items-center justify-center overflow-hidden">
			<!-- Full page background -->
			<div class="fixed top-0 left-0 w-full h-full -z-10">
				<WarpBackground
					color1="#09090b"
					color2="#27272a"
					color3="#52525b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>


			<!-- Navigation at top right -->
			<nav class="absolute top-6 right-8 flex space-x-4 z-20">
				<Link href="/blog" variant="secondary">Blog</Link>
				<Link href="/project" variant="secondary">Projects</Link>
				<Link href="/contact" variant="secondary">Contact</Link>
			</nav>

			<!-- Main hero section -->
			<section class="text-[var(--white)] mt-12 md:mt-0 z-10 w-full">
				<div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14 p-4 sm:p-8">
					
					<!-- Intro text -->
					<div class="text-left space-y-4">
						<p class="text-md md:text-lg text-[var(--white-icon)] shiny-white">
							Hi, I'm Rohit Ranjan Kumar
						</p>
						<div class="flex flex-col lg:flex-row lg:items-center space-y-4 lg:space-y-0 lg:space-x-8 md:gap-4">
							<h1 class="text-[var(--white)] text-5xl md:text-6xl font-medium text-pretty leading-none">
								Data Engineer <br /> & Software Developer
							</h1>
							<p class="text-md md:text-2xl text-[var(--white-icon)]">
								Building scalable data pipelines and transforming ideas into seamless, 
								interactive digital experiences with <span class="text-[var(--sec)] shiny-sec">modern technologies</span>.
							</p>
						</div>

						<!-- Social Links -->
						<div class="flex justify-start gap-2 pt-3 md:pt-6">
							
							<!-- GitHub -->
							<a target="_blank" href="https://github.com/RRK-CODER" aria-label="GitHub"
								class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
									<path d="M12.001 2C6.476 2 2 6.475 2 12c0 4.425 2.862 8.162 6.837 9.487.5.088.688-.212.688-.475 0-.238-.013-1.025-.013-1.862-2.513.462-3.163-0.613-3.363-1.175-.113-.288-.6-1.175-1.025-1.413-.35-.188-.85-.65-.012-.662.788-.013 1.35.725 1.538 1.025.9 1.512 2.338 1.087 2.913.825.087-.65.35-1.088.638-1.338-2.225-.25-4.55-1.112-4.55-4.937 0-1.088.388-1.988 1.025-2.688-.1-.15-.45-1.175.1-2.55 0 0 .838-.262 2.75 1.025.8-.225 1.65-.337 2.5-.337.85 0 1.7.112 2.5.337 1.912-1.287 2.75-1.025 2.75-1.025.55 1.375.2 2.4.1 2.55.637.7 1.025 1.6 1.025 2.688 0 3.825-2.325 4.687-4.55 4.937.35.3.675.888.675 1.8 0 1.3-.013 2.337-.013 2.65 0 .263.188.563.688.475A10.01 10.01 0 0 0 22 12c0-5.525-4.475-10-9.999-10Z"/>
								</svg>
							</a>

							<!-- LinkedIn -->
							<a target="_blank" href="https://linkedin.com/in/rrk-coder/" aria-label="LinkedIn"
								class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
									<path d="M18.336 18.339h-2.665v-4.177c0-.996-.02-2.278-1.389-2.278-1.39 0-1.602 1.084-1.602 2.205v4.25h-2.665V9.75h2.56v1.17h.034c.358-.675 1.228-1.387 2.528-1.387 2.7 0 3.2 1.777 3.2 4.092v4.714Zm-11.332-9.764c-.858 0-1.547-.695-1.547-1.549 0-.854.69-1.548 1.547-1.548.855 0 1.548.694 1.548 1.548 0 .854-.693 1.549-1.548 1.549ZM8.34 18.339H5.667V9.75H8.34v8.589ZM19.67 3H4.33C3.595 3 3.001 3.581 3.001 4.297v15.407c0 .717.594 1.297 1.329 1.297H19.67c.734 0 1.334-.58 1.334-1.297V4.297C21.004 3.581 20.404 3 19.67 3Z"/>
								</svg>
							</a>

							<!-- Kaggle -->
							<a target="_blank" href="https://www.kaggle.com/rrkcoder" aria-label="Kaggle"
								class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
									<path d="M14.21 12.004l6.17-6.616a.75.75 0 0 0-1.084-1.036l-6.5 6.97v-9.07a.75.75 0 0 0-1.5 0v19.496a.75.75 0 0 0 1.5 0v-9.108l6.498 6.973a.75.75 0 0 0 1.084-1.036l-6.168-6.613z"/>
								</svg>
							</a>

							<!-- LeetCode -->
							<a target="_blank" href="https://leetcode.com/RRK-CODER/" aria-label="LeetCode"
								class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-8">
									<path d="M13.73 4.17a.75.75 0 0 0-1.06.06L6.4 10.95a3.75 3.75 0 0 0 0 5.1l6.27 6.72a.75.75 0 0 0 1.12-.99l-6.26-6.71a2.25 2.25 0 0 1 0-3.06l6.27-6.72a.75.75 0 0 0-.07-1.06z"/>
									<path d="M20.25 11.25h-8a.75.75 0 0 0 0 1.5h8a.75.75 0 0 0 0-1.5z"/>
								</svg>
							</a>


							<!-- Email -->
							<a target="_blank" href="mailto:rrkcoder@gmail.com" aria-label="Email"
								class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]">
								<svg xmlns="http://www.w3.org/2000/svg" width="2.1em" height="2.1em" viewBox="0 0 24 24" fill="currentColor">
									<path d="m18.73 5.41-1.28 1L12 10.46 6.55 6.37l-1.28-1A2 2 0 0 0 2 7.05v11.59A1.36 1.36 0 0 0 3.36 20h3.19v-7.72L12 16.37l5.45-4.09V20h3.19A1.36 1.36 0 0 0 22 18.64V7.05a2 2 0 0 0-3.27-1.64"/>
								</svg>
							</a>

						</div>
					</div>

					<!-- Logos -->
					<LogoWall />

					<!-- Skills & Glitch Effect -->
					<div class="flex flex-col lg:flex-row items-center gap-8">
						<SkillsList client:load />
						<div class="flex justify-center md:w-full md:h-[292px] size-[290px] pt-3 md:pt-9 md:ml-16">

						</div>
					</div>
				</div>
			</section>
		</div>

	</main>
</RootLayout>
