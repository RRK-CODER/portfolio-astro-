---
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import Link from "../components/link.astro";
---

<RootLayout>
	<main>
		<div class="relative w-full min-h-screen flex items-center justify-center overflow-hidden">
			<!-- Full page background -->
			<div class="fixed top-0 left-0 w-full h-full -z-10">
				<WarpBackground
					color1="#09090b"
					color2="#27272a"
					color3="#52525b"
					speed={0.6}
					swirl={0.5}
					swirlIterations={10}
					shapeScale={0.3}
					client:load
				/>
			</div>

			<div class="relative z-10 flex flex-col items-center">
				<h1 class="text-6xl font-extrabold mb-8">Oops! 404</h1>

				<p class="text-xl max-w-2xl mb-12 opacity-90 leading-relaxed">
					Seems like this time we couldn't find what you were looking for.<br />
					But hey, don't worry — you can always <strong>reach out to me</strong> directly.
				</p>

            <a href="/contact" 
               class="px-8 py-4 rounded-2xl bg-indigo-600 hover:bg-indigo-700 
                  text-white font-bold text-lg shadow-xl hover:shadow-2xl transform hover:scale-105 transition">
					✨ Let's Talk — Contact Me ✨
				</a>

				<p class="mt-12 text-sm opacity-70">
					Or maybe head back <a href="/" class="underline hover:text-blue-400">Home</a> and try again.
				</p>
			</div>
		</div>
	</main>
</RootLayout>